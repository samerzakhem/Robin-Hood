<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo" />

    <dimen name="general_padding">3dp</dimen>
    <dimen name="text_size_large">22sp</dimen>
    <dimen name="text_size_general">18sp</dimen>
    <dimen name="text_size_medium">15sp</dimen>
    <dimen name="text_size_small">12sp</dimen>

    <color name="button_red">#ff0000</color>
    <color name="button_green">#00ff00</color>
    <color name="button_yellow">#ffff00</color>
    <color name="button_blue">#0000ff</color>

    <dimen name="buttons_width">100dp</dimen>
    <dimen name="general_margin">5dp</dimen>

    <style name="ControlButtonsStyle">
        <item name="android:layout_width">@dimen/buttons_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <dimen name="scroller_button_size">60dp</dimen>
    <dimen name="scroller_layout_size">200dp</dimen>

    <style name="ScrollerButton">
        <item name="android:layout_width">@dimen/scroller_button_size</item>
        <item name="android:layout_height">@dimen/scroller_button_size</item>
    </style>

    <style name="ScrollerButton.General">
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:layout_margin">@dimen/general_margin</item>
    </style>

    <style name="ScrollerButton.Central">
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <dimen name="color_buttor_size">50dp</dimen>

    <style name="ColorButton">
        <item name="android:layout_height">@dimen/color_buttor_size</item>
        <item name="android:layout_width">@dimen/color_buttor_size</item>
        <item name="android:layout_margin">@dimen/general_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="VideoSelectionDialog">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">@dimen/general_margin</item>
    </style>

    <style name="PlayerControlButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">@dimen/general_margin</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="PhotoDetailsText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">7dp</item>
    </style>

    <style name="PhotoDetailsText.Legend">
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="PhotoDetailsButton">
        <item name="android:layout_width">@dimen/buttons_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>